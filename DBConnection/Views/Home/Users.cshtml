@model IEnumerable<PgDemo.Models.User>


<h2>Список пользователей</h2>

<p>
    @Html.ActionLink("Добавить пользователя", "CreateIndex")
</p>
<table>
    <tr>
        <th>Login пользователя</th>
        <th>Пароль</th>
        <th>Роль</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "EditingUser", new { id = item.id_user }, new { onclick = "return confirm('Перейти на страницу редактирования пользователя?');" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id_user })
            </td>
        </tr>
    }
    </table>
<br>

<p>
    @Html.ActionLink("Список студентов", "Index")
</p>
<p>
    @Html.ActionLink("Список учителей", "ViewTeacher")
</p>
