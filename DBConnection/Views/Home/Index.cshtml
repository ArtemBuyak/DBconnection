
@model IEnumerable<PgDemo.Models.Student>


<h2>Список игроков</h2>

<p>
    @Html.ActionLink("Добавить студента", "CreateStudent")
</p>
<table>
    <tr>
        <th>Login студента</th>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Возраст</th>
        <th>Курс</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.User.login)</td>
            <td>
                @Html.DisplayFor(modelItem => item.f_name)
            </td>
            <td>@Html.DisplayFor(modelItem => item.l_name)</td>
            <td>@Html.DisplayFor(modelItem => item.age)</td>
            <td>
                @Html.DisplayFor(modelItem => item.course)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "EditingStudent", new { id = item.id_student }, new { onclick = "return confirm('Перейти на страницу редактирования студента?');" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id_student }, new { onclick = "return confirm('Вы действительно хотите удалить данного студента? Он также автоматически будет удален из списка прослушивающих курсы.');" })
            </td>
        </tr>
    }
</table>
<br>
<p>
    @Html.ActionLink("Список пользвателей", "Users")
</p>
<p>
    @Html.ActionLink("Список учителей", "ViewTeacher")
</p>
<p>
    @Html.ActionLink("Каталог курсов", "ViewCourse")
</p>

